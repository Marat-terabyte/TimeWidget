<Window x:Class="TimeWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeWidget" xmlns:viewmodels="clr-namespace:TimeWidget.ViewModels"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStyle="None"
        Height="170" Width="350"
        Activated="WindowActivated"
        Loaded="WindowLoaded"
        Background="{Binding BackgroundColor}">
    
    <Window.DataContext>
        <viewmodels:MainWindowVM></viewmodels:MainWindowVM>
    </Window.DataContext>

    <Grid MouseDown="MoveWindow">
        <TextBlock 
            FontSize="73"
            Foreground="{Binding ForegroundColor}"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Margin="0 0 0 65"
            Text="{Binding CurrentTime}">
        </TextBlock>
    </Grid>
    
</Window>
